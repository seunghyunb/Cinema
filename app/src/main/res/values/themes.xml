<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cinema" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextStyle.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Bold.Black" parent="TextStyle.Bold">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.White" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.White.Bold" parent="TextStyle.White">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Small" parent="TextStyle">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextStyle.Small.Bold" parent="TextStyle.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMini" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextMini.Bold" parent="TextMini">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMini.LightGray" parent="TextMini">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>